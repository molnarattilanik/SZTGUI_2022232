<Window x:Class="MintaZH.AthleteEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MintaZH"
        mc:Ignorable="d"
        Title="Details" Height="450" Width="800">
    <StackPanel>
        <Label Content="Name" Padding="10" Background="LightBlue"/>
        <Label Content="{Binding Athlete.Name}" Padding="10" />
        <Label Content="Event" Padding="10" Background="LightBlue"/>
        <Label Content="{Binding Athlete.Event}" Padding="10"  />
    </StackPanel>
</Window>
